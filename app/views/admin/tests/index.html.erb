<h1><%= t('.header') %></h1>
<button type="button"><%= link_to 'New test', new_admin_test_path %></button>

<%= render 'shared/errors', resource: @test %>

<table>
  <tr>
    <th class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th><%= t('.level') %></th>
    <th><%= t('.questions_number') %></th>
    <th colspan="3"><%= t('tests.index.actions') %></th>
  </tr>

  <%= render @tests %>
</table>